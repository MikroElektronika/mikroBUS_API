const _MIKROBUS_PWM_PIN  : byte = 6;
const _MIKROBUS_INT_PIN  : byte = 7;
const _MIKROBUS_RX_PIN   : byte = 8;
const _MIKROBUS_TX_PIN   : byte = 9;
const _MIKROBUS_SCL_PIN  : byte = 10;
const _MIKROBUS_SDA_PIN  : byte = 11;

// ----------------------------------------------------------- SYSTEM SPECIFIC /

function  _getAN_1  () : uint8_t;     begin Result := GPIO_PORTE_DATA.B3; end;
function  _getRST_1 () : uint8_t;     begin Result := GPIO_PORTC_DATA.B1; end;
function  _getCS_1  () : uint8_t;     begin Result := GPIO_PORTC_DATA.B3; end;
function  _getSCK_1 () : uint8_t;     begin Result := GPIO_PORTA_DATA.B2; end;
function  _getMISO_1() : uint8_t;     begin Result := GPIO_PORTA_DATA.B4; end;
function  _getMOSI_1() : uint8_t;     begin Result := GPIO_PORTA_DATA.B5; end;
function  _getPWM_1 () : uint8_t;     begin Result := GPIO_PORTH_DATA.B4; end;
function  _getINT_1 () : uint8_t;     begin Result := GPIO_PORTH_DATA.B0; end;
function  _getRX_1  () : uint8_t;     begin Result := GPIO_PORTA_DATA.B0; end;
function  _getTX_1  () : uint8_t;     begin Result := GPIO_PORTA_DATA.B1; end;
function  _getSCL_1 () : uint8_t;     begin Result := GPIO_PORTB_DATA.B2; end;
function  _getSDA_1 () : uint8_t;     begin Result := GPIO_PORTB_DATA.B3; end;
procedure _setAN_1  (state: uint8_t); begin GPIO_PORTE_DATA.B3 := state;  end;
procedure _setRST_1 (state: uint8_t); begin GPIO_PORTC_DATA.B1 := state;  end;
procedure _setCS_1  (state: uint8_t); begin GPIO_PORTC_DATA.B3 := state;  end;
procedure _setSCK_1 (state: uint8_t); begin GPIO_PORTA_DATA.B2 := state;  end;
procedure _setMISO_1(state: uint8_t); begin GPIO_PORTA_DATA.B4 := state;  end;
procedure _setMOSI_1(state: uint8_t); begin GPIO_PORTA_DATA.B5 := state;  end;
procedure _setPWM_1 (state: uint8_t); begin GPIO_PORTH_DATA.B4 := state;  end;
procedure _setINT_1 (state: uint8_t); begin GPIO_PORTH_DATA.B0 := state;  end;
procedure _setRX_1  (state: uint8_t); begin GPIO_PORTA_DATA.B0 := state;  end;
procedure _setTX_1  (state: uint8_t); begin GPIO_PORTA_DATA.B1 := state;  end;
procedure _setSCL_1 (state: uint8_t); begin GPIO_PORTB_DATA.B2 := state;  end;
procedure _setSDA_1 (state: uint8_t); begin GPIO_PORTB_DATA.B3 := state;  end;
    

function  _getAN_2  () : uint8_t;     begin Result := GPIO_PORTE_DATA.B2; end;
