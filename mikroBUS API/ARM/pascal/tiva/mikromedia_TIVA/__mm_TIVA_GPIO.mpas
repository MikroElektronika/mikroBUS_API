function  _getSCK_2 () : uint8_t;     begin Result := GPIO_PORTA_DATA.B2; end;
function  _getMISO_2() : uint8_t;     begin Result := GPIO_PORTA_DATA.B4; end;
function  _getMOSI_2() : uint8_t;     begin Result := GPIO_PORTA_DATA.B5; end;
function  _getPWM_2 () : uint8_t;     begin Result := GPIO_PORTH_DATA.B5; end;
function  _getINT_2 () : uint8_t;     begin Result := GPIO_PORTH_DATA.B1; end;
function  _getRX_2  () : uint8_t;     begin Result := GPIO_PORTA_DATA.B0; end;
function  _getTX_2  () : uint8_t;     begin Result := GPIO_PORTA_DATA.B1; end;
function  _getSCL_2 () : uint8_t;     begin Result := GPIO_PORTB_DATA.B2; end;
function  _getSDA_2 () : uint8_t;     begin Result := GPIO_PORTB_DATA.B3; end;
