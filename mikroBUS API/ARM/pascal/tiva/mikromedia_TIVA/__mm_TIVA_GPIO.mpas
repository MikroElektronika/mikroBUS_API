procedure _setMOSI_2(state: uint8_t); begin GPIO_PORTA_DATA.B5 := state;  end;
procedure _setPWM_2 (state: uint8_t); begin GPIO_PORTH_DATA.B5 := state;  end;
procedure _setINT_2 (state: uint8_t); begin GPIO_PORTH_DATA.B1 := state;  end;
procedure _setRX_2  (state: uint8_t); begin GPIO_PORTA_DATA.B0 := state;  end;
procedure _setTX_2  (state: uint8_t); begin GPIO_PORTA_DATA.B1 := state;  end;
procedure _setSCL_2 (state: uint8_t); begin GPIO_PORTB_DATA.B2 := state;  end;
procedure _setSDA_2 (state: uint8_t); begin GPIO_PORTB_DATA.B3 := state;  end;

function _gpioInit_1(pin: T_mikrobus_pin; direction: T_gpio_dir) : T_mikrobus_ret;
begin
Result := 0;
    case pin of
        _MIKROBUS_AN_PIN    : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTE_DATA, _GPIO_PINMASK_3) else GPIO_Digital_Output(@GPIO_PORTE_DATA, _GPIO_PINMASK_3); end;
        _MIKROBUS_RST_PIN   : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTC_DATA, _GPIO_PINMASK_1) else GPIO_Digital_Output(@GPIO_PORTC_DATA, _GPIO_PINMASK_1); end;
        _MIKROBUS_CS_PIN    : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTC_DATA, _GPIO_PINMASK_3) else GPIO_Digital_Output(@GPIO_PORTC_DATA, _GPIO_PINMASK_3); end;
        _MIKROBUS_SCK_PIN   : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTA_DATA, _GPIO_PINMASK_2) else GPIO_Digital_Output(@GPIO_PORTA_DATA, _GPIO_PINMASK_2); end;
        _MIKROBUS_MISO_PIN  : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTA_DATA, _GPIO_PINMASK_4) else GPIO_Digital_Output(@GPIO_PORTA_DATA, _GPIO_PINMASK_4); end;
        _MIKROBUS_MOSI_PIN  : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTA_DATA, _GPIO_PINMASK_5) else GPIO_Digital_Output(@GPIO_PORTA_DATA, _GPIO_PINMASK_5); end;
        _MIKROBUS_PWM_PIN   : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTH_DATA, _GPIO_PINMASK_4) else GPIO_Digital_Output(@GPIO_PORTH_DATA, _GPIO_PINMASK_4); end;
        _MIKROBUS_INT_PIN   : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTH_DATA, _GPIO_PINMASK_0) else GPIO_Digital_Output(@GPIO_PORTH_DATA, _GPIO_PINMASK_0); end;
        _MIKROBUS_RX_PIN    : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTA_DATA, _GPIO_PINMASK_0) else GPIO_Digital_Output(@GPIO_PORTA_DATA, _GPIO_PINMASK_0); end;
        _MIKROBUS_TX_PIN    : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTA_DATA, _GPIO_PINMASK_1) else GPIO_Digital_Output(@GPIO_PORTA_DATA, _GPIO_PINMASK_1); end;
        _MIKROBUS_SCL_PIN   : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTB_DATA, _GPIO_PINMASK_2) else GPIO_Digital_Output(@GPIO_PORTB_DATA, _GPIO_PINMASK_2); end;
        _MIKROBUS_SDA_PIN   : begin if direction = _GPIO_INPUT then GPIO_Digital_Input(@GPIO_PORTB_DATA, _GPIO_PINMASK_3) else GPIO_Digital_Output(@GPIO_PORTB_DATA, _GPIO_PINMASK_3); end
    else
        Result := _MIKROBUS_ERR_PIN;
    end;
end;

